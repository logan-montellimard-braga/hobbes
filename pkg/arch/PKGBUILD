pkgname=hobbes
pkgver=0.1.0
pkgrel=1
pkgdesc="Hobbes is an applicative suite made to greatly improve taking lectures notes. "
arch=(any)
url="http://hobbes-lang.org/"
license=('GPL')
groups=
provides=
depends=('openjdk')
optdepends=
makedepends=('git')
conflicts=
replaces=
backup=('etc/palne/palne.conf')
install=
source=('git+https://github.com/seytz/hobbes')
md5sums=('63222E931F30E9C268D240934140F2CD')


package() {
  cd "$srcdir/hobbes/pkg/arch/bin/"
  cp ./hobbes /usr/bin/hobbes
  mkdir /usr/share/doc/hobbes/
  cp "$srcdir/doc/hobbes.html" /usr/share/doc/hobbes/hobbes.html
}
